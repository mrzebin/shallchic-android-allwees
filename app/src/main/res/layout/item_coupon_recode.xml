<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/item_pspace10"
    android:layout_margin="@dimen/item_pspace10"
    app:qmui_radius="@dimen/item_pspace10"
    app:qmui_backgroundColor="@color/white"
    app:qmui_borderWidth="@dimen/item_pspace0.5"
    app:qmui_borderColor="@color/color_f3f3"
    >
    <TextView
        android:id="@+id/tv_cValueRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rate_5"
        android:textSize="@dimen/item_pspace25"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="5"
        android:layout_gravity="center"
        >
    </TextView>

    <ImageView
        android:layout_width="@dimen/item_pspace2"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_vertical_interval"
        >
    </ImageView>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/item_pspace15"
        android:paddingTop="@dimen/item_pspace10"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/off_your_p"
            android:textStyle="bold"
            android:textSize="@dimen/app_text_word13"
            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/item_pspace5"
            android:visibility="visible"
            >
            <TextView
                android:id="@+id/tv_deductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/app_text_word13"
                >
            </TextView>
            <TextView
                android:id="@+id/tv_deductMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/app_text_word13"
                android:layout_marginStart="@dimen/item_pspace5"
                android:singleLine="true"
                android:ellipsize="end"
                >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/item_pspace10"
            android:background="@drawable/bg_car_coupon_wrap"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_cCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/app_text_word13"
                android:gravity="center"
                >
            </TextView>
            <ImageView
                android:id="@+id/tv_cUse"
                android:layout_width="@dimen/item_pspace15"
                android:layout_height="@dimen/item_pspace15"
                android:src="@mipmap/ic_copy_no"
                android:layout_marginStart="@dimen/item_pspace10"
                android:layout_gravity="center_vertical"
                >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expires_one"
                android:textSize="@dimen/app_text_word12"
                >
            </TextView>
            <TextView
                android:id="@+id/tv_cActionPts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/app_text_word12"
                >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>