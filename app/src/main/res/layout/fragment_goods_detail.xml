<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_pspace40"
        android:paddingStart="@dimen/item_pspace10"
        android:paddingEnd="@dimen/item_pspace10"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/item_pspace10"
            android:paddingEnd="@dimen/item_pspace10"
            android:src="@mipmap/ic_black_back"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        </ImageView>

        <TextView
            android:id="@+id/tv_topTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/goods_detail_title"
            android:textSize="@dimen/app_text_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            ></TextView>

        <ImageView
            android:id="@+id/iv_goodsDshare"
            android:layout_width="@dimen/item_pspace20"
            android:layout_height="@dimen/item_pspace20"
            android:src="@mipmap/allwees_ic_share"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        </ImageView>

        <ImageView
            android:id="@+id/iv_shoppingCart"
            android:layout_width="@dimen/item_pspace20"
            android:layout_height="@dimen/item_pspace20"
            android:src="@mipmap/ic_shopping_cart_1"
            android:visibility="visible"
            android:layout_marginTop="@dimen/item_pspace2"
            android:layout_marginEnd="@dimen/item_pspace10"
            app:layout_constraintEnd_toStartOf="@id/iv_goodsDshare"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        </ImageView>

        <TextView
            android:id="@+id/tv_alBuyCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text_word12"
            android:layout_marginTop="@dimen/item_pspace3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/iv_shoppingCart"
            app:layout_constraintEnd_toEndOf="@id/iv_shoppingCart"
            >
        </TextView>

        <View
            android:id="@+id/v_hasCart"
            android:layout_width="@dimen/item_pspace5"
            android:layout_height="@dimen/item_pspace5"
            android:background="@drawable/shape_red_5_indicate"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/item_pspace10"
            app:layout_constraintStart_toEndOf="@id/iv_shoppingCart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        </View>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_pspace0.5"
        android:background="@color/app_background_default"
        >
    </View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/app_background_default"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_pspace375">
                <ImageView
                    android:id="@+id/iv_noneCover"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_pspace375"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:src="@mipmap/allwees_ic_default_goods"
                    >
                </ImageView>
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_goodsCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.viewpager2.widget.ViewPager2>
                <TextView
                    android:id="@+id/tv_tagPading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_text_word12"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/item_pspace10"
                    android:background="@drawable/shape_round_8_page_indicate"
                    android:visibility="gone"
                    >
                </TextView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/item_pspace15"
                android:paddingBottom="@dimen/item_pspace15"
                android:paddingStart="@dimen/item_pspace10"
                android:paddingEnd="@dimen/item_pspace10"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_dGoodsName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:text="">
                </TextView>
                <ImageView
                    android:id="@+id/iv_switchFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/item_pspace5"
                    android:src="@drawable/selector_goods_detail_favoriter"
                    >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_refund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/item_pspace15"
                android:paddingBottom="@dimen/item_pspace15"
                android:paddingStart="@dimen/item_pspace10"
                android:paddingEnd="@dimen/item_pspace10"
                android:layout_marginTop="@dimen/item_pspace5"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawablePadding="@dimen/item_pspace10"
                    android:text="@string/goods_detail_drar"
                    app:drawableEndCompat="@mipmap/allwees_ic_safe">
                </TextView>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_pspace1"
                android:background="@color/app_background_default"
                >
            </View>
            <LinearLayout
                android:id="@+id/ll_choiceCAndS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/item_pspace15"
                android:paddingBottom="@dimen/item_pspace15"
                android:paddingStart="@dimen/item_pspace10"
                android:paddingEnd="@dimen/item_pspace10"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawablePadding="@dimen/item_pspace10"
                    android:text="@string/goods_detail_cas" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_pspace1"
                android:background="@color/app_background_default"
                >
            </View>

            <LinearLayout
                android:id="@+id/ll_descrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/item_pspace15"
                android:paddingBottom="@dimen/item_pspace15"
                android:paddingStart="@dimen/item_pspace10"
                android:paddingEnd="@dimen/item_pspace10"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="@string/goods_detail_des"
                    android:drawablePadding="@dimen/item_pspace10"
                    >
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_pspace1"
                android:background="@color/app_background_default"
                >
            </View>
            <LinearLayout
                android:id="@+id/ll_gdDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/item_pspace15"
                android:paddingBottom="@dimen/item_pspace15"
                android:paddingStart="@dimen/item_pspace10"
                android:paddingEnd="@dimen/item_pspace10"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="@string/goods_detaildo"
                    android:drawablePadding="@dimen/item_pspace10"
                    >
                </TextView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_background_default"
                >
                <TextView
                    android:id="@+id/tv_tile_something"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/goods_seyml"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/item_pspace20"
                    android:layout_marginBottom="@dimen/item_pspace10"
                    >
                </TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_below="@id/tv_tile_something"
                    android:paddingStart="@dimen/item_pspace5"
                    android:paddingEnd="@dimen/item_pspace5"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rlv_someGoods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        >
                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/item_pspace10"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_gd_orignPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_999"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
        </TextView>

        <TextView
            android:id="@+id/tv_gd_couponPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/app_text_18sp"
            android:textColor="@color/color_f3636"
            android:layout_marginStart="@dimen/item_pspace10"
            app:layout_constraintStart_toEndOf="@id/tv_gd_orignPrice"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        </TextView>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/qmui_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy"
            android:textColor="@color/white"
            android:clickable="true"
            android:paddingTop="@dimen/item_pspace8"
            android:paddingBottom="@dimen/item_pspace8"
            android:paddingStart="@dimen/item_pspace35"
            android:paddingEnd="@dimen/item_pspace35"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:qmui_radius="@dimen/item_pspace5"
            app:qmui_borderWidth="0dp"
            app:qmui_backgroundColor="@color/color_f3636"
            app:qmui_skin_background="?attr/app_skin_btn_test_bg_single"
            android:focusable="true">
        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>