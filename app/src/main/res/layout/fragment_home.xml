<?xml version="1.0" encoding="utf-8"  ?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/app_content_bg_color"
    android:clipChildren="false"
    app:qmui_skin_background="?attr/app_skin_common_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.project.app.ui.NoScrollViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible"
            >
        </com.project.app.ui.NoScrollViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_pspace45"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/tab_main_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_tab_main_home"
                    android:layout_width="@dimen/item_pspace22"
                    android:layout_height="@dimen/item_pspace22"
                    android:src="@drawable/tab_home_style"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tab_main_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_tab_main_category"
                    android:layout_width="@dimen/item_pspace22"
                    android:layout_height="@dimen/item_pspace22"
                    android:src="@drawable/tab_category_style"
                    />
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tab_main_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_tabCartCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLength="3"
                    android:singleLine="true"
                    android:textSize="@dimen/app_text_word11"
                    android:textColor="@color/color_999"
                    android:layout_marginTop="@dimen/item_pspace3"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >
                </TextView>
                <ImageView
                    android:id="@+id/iv_tab_main_cart"
                    android:layout_width="@dimen/item_pspace22"
                    android:layout_height="@dimen/item_pspace22"
                    android:src="@drawable/tab_cart_style"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/tab_main_wishlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_tab_main_wishlist"
                    android:layout_width="@dimen/item_pspace22"
                    android:layout_height="@dimen/item_pspace22"
                    android:src="@drawable/tab_wishlist_style"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_main_me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_tab_main_me"
                    android:layout_width="@dimen/item_pspace22"
                    android:layout_height="@dimen/item_pspace22"
                    android:src="@drawable/tab_me_style"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>