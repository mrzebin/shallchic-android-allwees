<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_default"
    android:clipChildren="false"
    android:layoutDirection="locale"
    app:qmui_skin_background="?attr/app_skin_common_background"
    >
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srf_classify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >
        <com.hb.basemodel.utils.RecycerLoadMoreScrollView
            android:id="@+id/rlv_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:nestedScrollingEnabled="false"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/ll_bannerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                        android:id="@+id/iv_home_banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_pspace115"
                        android:visibility="gone"
                        android:scaleType="fitXY"
                        android:minHeight="@dimen/item_pspace100"
                        android:src="@mipmap/ic_home_banner_location"
                        android:layout_marginTop="@dimen/item_pspace5"
                        android:layout_marginStart="@dimen/item_pspace8"
                        android:layout_marginEnd="@dimen/item_pspace8"
                        android:layout_marginBottom="@dimen/item_pspace5"
                        app:qmui_border_width="0dp"
                        app:qmui_corner_radius="@dimen/item_pspace8"
                        >
                    </com.qmuiteam.qmui.widget.QMUIRadiusImageView>

                    <com.youth.banner.Banner
                        android:id="@+id/bn_active"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_pspace115"
                        android:minHeight="@dimen/item_pspace100"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/item_pspace5"
                        android:layout_marginStart="@dimen/item_pspace8"
                        android:layout_marginEnd="@dimen/item_pspace8"
                        android:layout_marginBottom="@dimen/item_pspace5"
                        app:banner_indicator_normal_color ="@color/color_ccc"
                        app:banner_indicator_selected_color="@color/allwees_theme_color"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="h,3.55:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:banner_radius = "@dimen/item_pspace8"
                        app:banner_infinite_loop = "true"
                        app:banner_auto_loop = "true"
                        app:banner_loop_time = "3000"
                        app:banner_orientation = "horizontal"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/item_pspace10"
                        android:layout_marginStart="@dimen/item_pspace10"
                        android:layout_marginEnd="@dimen/item_pspace10"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="start"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@mipmap/allwees_ic_home_fidelity"
                                android:drawablePadding="@dimen/item_pspace5"
                                android:text="@string/home_classify_p_gd"
                                android:textSize="@dimen/app_text_11sp"
                                tools:layout_editor_absoluteX="2dp"
                                tools:layout_editor_absoluteY="80dp"
                                >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@mipmap/allwees_ic_home_return"
                                android:drawablePadding="@dimen/item_pspace5"
                                android:text="@string/home_classify_p_dr"
                                android:textSize="@dimen/app_text_11sp"
                                android:gravity="center"
                                tools:layout_editor_absoluteX="2dp"
                                tools:layout_editor_absoluteY="80dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layoutDirection="locale"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:drawableStart="@mipmap/allwees_ic_home_freeshipping"
                                android:drawablePadding="@dimen/item_pspace5"
                                android:text="@string/home_classify_p_fs"
                                android:textSize="@dimen/app_text_11sp"
                                tools:layout_editor_absoluteX="2dp"
                                tools:layout_editor_absoluteY="80dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_giftWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/item_pspace10"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_classify_p_new_user_free_gifts"
                            android:textStyle="bold"
                            android:textSize="@dimen/app_text_word13"
                            >
                        </TextView>
                        <TextView
                            android:id="@+id/tv_browseMorefg"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/str_more"
                            android:textSize="@dimen/app_text_word12"
                            android:textColor="@color/color_999"
                            android:gravity="end"
                            android:drawableEnd="@mipmap/ic_gray_right_arrow"
                            >
                        </TextView>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rlv_active_freeGift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/item_pspace10"
                        >
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_flashSale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/item_pspace10"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_classify_flash_flash"
                            android:textStyle="bold"
                            android:textSize="@dimen/app_text_word13"
                            android:textColor="@color/color_333"
                            >
                        </TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_flash"
                            android:layout_marginStart="@dimen/item_pspace3"
                            android:layout_marginEnd="@dimen/item_pspace3"
                            >
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_classify_sale_flash"
                            android:textStyle="bold"
                            android:textSize="@dimen/app_text_word13"
                            android:textColor="@color/color_333"
                            >
                        </TextView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/item_pspace10"
                            android:layout_marginEnd="@dimen/item_pspace10"
                            android:layoutDirection="ltr"
                            >
                            <TextView
                                android:id="@+id/tv_fs_h"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:ems="2"
                                android:textSize="@dimen/app_text_word12"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_black_frame"
                                >
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textSize="@dimen/app_text_word12"
                                android:textColor="@color/color_333"
                                android:layout_marginStart="@dimen/item_pspace3"
                                android:layout_marginEnd="@dimen/item_pspace3"
                                >
                            </TextView>
                            <TextView
                                android:id="@+id/tv_fs_m"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:ems="2"
                                android:textSize="@dimen/app_text_word12"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_black_frame"
                                >
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textSize="@dimen/app_text_word12"
                                android:textColor="@color/color_333"
                                android:layout_marginStart="@dimen/item_pspace3"
                                android:layout_marginEnd="@dimen/item_pspace3"
                                >
                            </TextView>
                            <TextView
                                android:id="@+id/tv_fs_s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:ems="2"
                                android:textSize="@dimen/app_text_word12"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_black_frame"
                                >
                            </TextView>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_fsMore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/str_more"
                            android:textSize="@dimen/app_text_word12"
                            android:textColor="@color/color_333"
                            android:gravity="end|center_vertical"
                            android:drawableEnd="@mipmap/ic_gray_right_arrow"
                            >
                        </TextView>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rlv_fsWrpper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="true"
                        android:layout_marginEnd="@dimen/item_pspace10"
                        >
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/qiv_buyDeliverOne"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_pspace115"
                    android:layout_marginTop="@dimen/item_pspace10"
                    android:layout_marginStart="@dimen/item_pspace10"
                    android:layout_marginEnd="@dimen/item_pspace10"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    app:qmui_corner_radius="@dimen/item_pspace12"
                    app:qmui_border_width="0dp"
                    >
                </com.qmuiteam.qmui.widget.QMUIRadiusImageView>

                <TextView
                    android:id="@+id/tv_moreLoveTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_classify_p_jfy"
                    android:textStyle="bold"
                    android:textSize="@dimen/app_text_word13"
                    android:layout_marginTop="@dimen/item_pspace10"
                    android:layout_marginStart="@dimen/item_pspace10"
                    android:visibility="gone"
                    >
                </TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/item_pspace10"
                    android:paddingStart="@dimen/item_pspace5"
                    android:paddingEnd="@dimen/item_pspace5"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_classify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        >
                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>
                <include layout="@layout/layout_no_more" />
            </LinearLayout>
        </com.hb.basemodel.utils.RecycerLoadMoreScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>