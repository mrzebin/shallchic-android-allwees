<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_marginTop="-300dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/allwees_bg_pure_me_top"
        android:scaleType="centerCrop"
        app:layout_collapseMode="parallax"
        >
    </ImageView>
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePureScrollMode="true"
        app:srlEnableLoadMore="false"
        app:srlDragRate="0.75"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:fadeScrollbars="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/item_pspace30"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_180"
                        android:src="@mipmap/allwees_bg_me_top"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        >
                    </ImageView>
                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/item_pspace_160"
                        app:qmui_radiusTopLeft="@dimen/item_pspace10"
                        app:qmui_radiusTopRight="@dimen/item_pspace10"
                        app:qmui_backgroundColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/item_pspace13"
                            android:paddingBottom="@dimen/item_pspace13"
                            android:paddingStart="@dimen/item_pspace15"
                            android:paddingEnd="@dimen/item_pspace15"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/me_myOrder"
                                android:textSize="@dimen/app_text_15sp"
                                android:layout_alignParentStart="true"
                                >
                            </TextView>
                            <TextView
                                android:id="@+id/tv_browseAllOrder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/me_view_all"
                                android:textSize="@dimen/app_text_14sp"
                                android:drawablePadding="@dimen/item_pspace5"
                                android:textColor="@color/color_999"
                                android:layout_alignParentEnd="true"
                                app:drawableEndCompat="@mipmap/ic_gray_right_arrow">
                            </TextView>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_pspace0.5"
                            android:background="@color/color_eee"
                            >
                        </View>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rlv_orderFuns"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/color_eee"
                            >
                        </View>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rlv_earn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            >
                        </androidx.recyclerview.widget.RecyclerView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/item_pspace15"
                            android:visibility="gone"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/app_text_14sp"
                                android:textColor="@color/color_333"
                                android:layout_alignParentStart="true"
                                >
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/color_2fb"
                                android:textSize="@dimen/app_text_14sp"
                                >
                            </TextView>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_pspace0.5"
                            android:background="@color/color_eee"
                            >
                        </View>
                        <RelativeLayout
                            android:id="@+id/rl_cashDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/item_pspace15"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/app_text_14sp"
                                android:textColor="@color/color_333"
                                android:text="@string/me_sc"
                                android:layout_alignParentStart="true"
                                >
                            </TextView>
                            <TextView
                                android:id="@+id/tv_scCash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/allwees_theme_color"
                                android:textSize="@dimen/app_text_14sp"
                                android:visibility="gone"
                                >
                            </TextView>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_pspace0.5"
                            android:background="@color/color_eee"
                            >
                        </View>
                        <RelativeLayout
                            android:id="@+id/rl_reward"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/item_pspace15"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/app_text_14sp"
                                android:textColor="@color/color_333"
                                android:text="@string/me_rewards"
                                android:layout_alignParentStart="true"
                                >
                            </TextView>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentEnd="true"
                                >
                                <TextView
                                    android:id="@+id/tv_meBindPoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_zero"
                                    android:textSize="@dimen/app_text_14sp"
                                    android:textColor="@color/allwees_theme_color"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tv_mePointsSuffix"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/me_points"
                                    android:textColor="@color/allwees_theme_color"
                                    android:textSize="@dimen/app_text_14sp"
                                    android:visibility="gone"
                                    />
                            </LinearLayout>

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_pspace0.5"
                            android:background="@color/color_eee"
                            >
                        </View>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/item_pspace15"
                            android:visibility="gone"
                            >
                            <TextView
                                android:id="@+id/tv_earnTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/app_text_14sp"
                                android:textColor="@color/color_333"
                                android:text="@string/me_dlb"
                                android:layout_alignParentStart="true"
                                >
                            </TextView>
                            <TextView
                                android:id="@+id/tv_castMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/color_2fb"
                                android:textSize="@dimen/app_text_14sp"
                                >
                            </TextView>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/color_eee"
                            >
                        </View>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rlv_me_helper"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_inflate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_pspace50"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        >
                    </RelativeLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_userInfo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_pspace118"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rl_inflate"
                        >
                        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                            android:id="@+id/qmiv_meHeader"
                            android:layout_width="@dimen/item_pspace58"
                            android:layout_height="@dimen/item_pspace58"
                            android:layout_marginStart="@dimen/item_pspace26"
                            android:src="@mipmap/allwees_ic_default_header"
                            android:scaleType="fitXY"
                            android:layout_marginBottom="@dimen/item_pspace20"
                            app:qmui_is_oval="true"
                            app:qmui_border_width="@dimen/item_pspace1"
                            app:qmui_border_color="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            >
                        </com.qmuiteam.qmui.widget.QMUIRadiusImageView>
                        <TextView
                            android:id="@+id/tv_goLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/app_text_word12"
                            android:text="@string/me_unlogin_hint"
                            android:gravity="center"
                            android:background="@drawable/shape_dim_round_white"
                            android:singleLine="true"
                            android:maxLength="16"
                            android:textColor="@color/white"
                            android:layout_marginStart="@dimen/item_pspace15"
                            app:layout_constraintTop_toTopOf="@id/qmiv_meHeader"
                            app:layout_constraintBottom_toBottomOf="@id/qmiv_meHeader"
                            app:layout_constraintStart_toEndOf="@id/qmiv_meHeader"
                            >
                        </TextView>

                        <TextView
                            android:id="@+id/tv_clientnName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/app_text_15sp"
                            android:textStyle="bold"
                            android:text=""
                            android:singleLine="true"
                            android:maxLength="16"
                            android:textColor="@color/white"
                            android:visibility="gone"
                            android:layout_marginStart="@dimen/item_pspace15"
                            app:layout_constraintTop_toTopOf="@id/qmiv_meHeader"
                            app:layout_constraintBottom_toBottomOf="@id/qmiv_meHeader"
                            app:layout_constraintStart_toEndOf="@id/qmiv_meHeader"
                            >
                        </TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</FrameLayout>