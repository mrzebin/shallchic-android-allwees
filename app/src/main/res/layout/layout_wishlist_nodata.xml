<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_nowish"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    >
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/qrb_goShipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cart_continue_shipping"
            android:textSize="@dimen/app_text_15sp"
            android:textColor="@color/white"
            android:paddingTop="@dimen/item_pspace8"
            android:paddingBottom="@dimen/item_pspace8"
            android:paddingStart="@dimen/item_pspace15"
            android:paddingEnd="@dimen/item_pspace15"
            android:layout_centerInParent="true"
            app:qmui_radius="@dimen/item_pspace8"
            app:qmui_backgroundColor="@color/allwees_theme_color"
            app:qmui_borderWidth="0dp"
            >
        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton>

        <ImageView
            android:id="@+id/iv_scenery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_nowish"
            android:layout_above="@id/iv_senery_hint"
            android:layout_centerHorizontal="true"
            >
        </ImageView>

        <TextView
            android:id="@+id/iv_senery_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wishlist_empty_hint"
            android:textSize="@dimen/app_text_word13"
            android:textColor="@color/color_999"
            android:gravity="center"
            android:layout_marginBottom="@dimen/item_pspace20"
            android:layout_above="@id/qrb_goShipping"
            android:layout_centerHorizontal="true"
            >
        </TextView>

</RelativeLayout>

