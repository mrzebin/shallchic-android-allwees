<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/item_pspace23"
    android:paddingBottom="@dimen/item_pspace20"
    >
    <ImageView
        android:id="@+id/iv_funRes"
        android:layout_width="@dimen/item_pspace30"
        android:layout_height="@dimen/item_pspace30"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        >
    </ImageView>

    <TextView
        android:id="@+id/tv_funName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_pspace10"
        android:textSize="@dimen/app_text_12sp"
        android:textColor="@color/color_666"
        android:text=""
        android:layout_gravity="center_horizontal"
        >
    </TextView>

</LinearLayout>