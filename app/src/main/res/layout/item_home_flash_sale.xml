<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/item_pspace10"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/qiv_sfCover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_pspace125"
            android:scaleType="centerCrop"
            app:qmui_corner_radius="@dimen/item_pspace8"
            app:qmui_border_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        </com.qmuiteam.qmui.widget.QMUIRadiusImageView>
        <com.hb.basemodel.uicomponent.roundview.RoundLinearLayout
            android:id="@+id/rll_discountWrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/item_pspace8"
            android:paddingEnd="@dimen/item_pspace8"
            android:paddingTop="@dimen/item_pspace2"
            android:paddingBottom="@dimen/item_pspace2"
            android:layout_gravity="start"
            android:gravity="center"
            android:visibility="gone"
            app:rv_backgroundColor="@color/color_990000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:id="@+id/tv_discountOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/app_text_word11"
                android:textDirection="ltr"
                ></TextView>
        </com.hb.basemodel.uicomponent.roundview.RoundLinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_pspace5"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_fsOriginP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text_word13"
            >
        </TextView>
        <TextView
            android:id="@+id/tv_fsRetailP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text_word11"
            android:textColor="@color/color_999"
            android:layout_marginStart="@dimen/item_pspace5"
            >
        </TextView>
    </LinearLayout>


</LinearLayout>





