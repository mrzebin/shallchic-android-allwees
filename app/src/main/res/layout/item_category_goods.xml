<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/qm_cGood"
        android:layout_width="@dimen/item_pspace85"
        android:layout_height="@dimen/item_pspace85"
        android:scaleType="centerCrop"
        app:qmui_is_oval="true"
        app:qmui_border_color="@color/white"
        app:qmui_border_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </com.qmuiteam.qmui.widget.QMUIRadiusImageView>

    <TextView
        android:id="@+id/tv_cGoodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_text_word12"
        android:layout_marginTop="@dimen/item_pspace16"
        app:layout_constraintTop_toBottomOf="@+id/qm_cGood"
        app:layout_constraintStart_toStartOf="@+id/qm_cGood"
        app:layout_constraintEnd_toEndOf="@id/qm_cGood"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>