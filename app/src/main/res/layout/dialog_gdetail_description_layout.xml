<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/app_background_default"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_efef"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goods_detail_des"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            >
        </TextView>

        <ImageView
            android:id="@+id/iv_closeRefund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_close"
            android:paddingTop="@dimen/item_pspace15"
            android:paddingBottom="@dimen/item_pspace15"
            android:paddingStart="@dimen/item_pspace10"
            android:paddingEnd="@dimen/item_pspace10"
            android:layout_alignParentEnd="true"
            >
        </ImageView>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_pspace300"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/item_pspace5"
            >
            <TextView
                android:id="@+id/tv_gdDescribte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/app_text_word13"
                >
            </TextView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="@dimen/item_pspace10"
        android:paddingBottom="@dimen/item_pspace10"
        android:paddingStart="@dimen/item_pspace20"
        android:paddingEnd="@dimen/item_pspace20"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_weight="1"
        >
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/qmui_addToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/goods_atc"
            android:textColor="@color/white"
            android:paddingTop="@dimen/item_pspace10"
            android:paddingBottom="@dimen/item_pspace10"
            app:qmui_radius="@dimen/item_pspace8"
            app:qmui_borderWidth="0dp"
            app:qmui_backgroundColor="@color/color_f3636"
            app:qmui_skin_background="?attr/app_skin_btn_test_bg"
            app:qmui_skin_text_color="?attr/app_skin_btn_test_border"
            >
        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton>
    </LinearLayout>

</LinearLayout>