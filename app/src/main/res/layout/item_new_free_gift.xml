<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/item_pspace5"
    >

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/qiv_newGift"
        android:layout_width="@dimen/item_pspace80"
        android:layout_height="@dimen/item_pspace80"
        android:minWidth="@dimen/item_pspace80"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:qmui_border_width="@dimen/item_pspace1"
        app:qmui_border_color="@color/color_eee"
        app:qmui_corner_radius="@dimen/item_pspace8"
        >
    </com.qmuiteam.qmui.widget.QMUIRadiusImageView>

    <ImageView
        android:id="@+id/iv_unChoiceGift"
        android:layout_width="@dimen/item_pspace15"
        android:layout_height="@dimen/item_pspace15"
        android:src="@drawable/selector_new_gift"
        android:layout_margin="@dimen/item_pspace5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </ImageView>

    <TextView
        android:id="@+id/tv_giftReduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/app_text_word12"
        app:layout_constraintStart_toStartOf="@+id/qiv_newGift"
        app:layout_constraintTop_toBottomOf="@id/qiv_newGift"
        >
    </TextView>

    <TextView
        android:id="@+id/tv_giftRetailP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/app_text_word11"
        android:layout_marginStart="@dimen/item_pspace5"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_giftReduce"
        app:layout_constraintStart_toEndOf="@id/tv_giftReduce"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>