<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/item_pspace10"
    >

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/qiv_giftRCover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_pspace148"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:qmui_corner_radius="@dimen/item_pspace8"
        app:qmui_border_width="0dp"
        >
    </com.qmuiteam.qmui.widget.QMUIRadiusImageView>

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/qiv_giftCover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_pspace125"
        android:scaleType="centerCrop"
        app:qmui_corner_radius="@dimen/item_pspace8"
        app:qmui_border_width="0dp"
        >
    </com.qmuiteam.qmui.widget.QMUIRadiusImageView>

    <LinearLayout
        android:id="@+id/ll_recommendC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_pspace5"
        >
        <TextView
            android:id="@+id/tv_newFreeP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text_word13"
            >
        </TextView>
        <TextView
            android:id="@+id/tv_newRetailP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text_word11"
            android:textColor="@color/color_999"
            android:layout_marginStart="@dimen/item_pspace5"
            >
        </TextView>
    </LinearLayout>


</LinearLayout>





