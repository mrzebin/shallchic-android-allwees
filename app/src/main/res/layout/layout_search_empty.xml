<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    android:id="@+id/rl_searchNoData"
    >
    <ImageView
        android:id="@+id/iv_scenery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_image_cartemty"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_searchNoData"
        >
    </ImageView>

    <TextView
        android:id="@+id/tv_searchNoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_no_search_data"
        android:textSize="@dimen/app_text_word13"
        android:textColor="@color/color_999"
        android:gravity="center"
        android:layout_marginBottom="@dimen/item_pspace10"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/qmb_refresh"
        >
    </TextView>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/qmb_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refresh"
        android:textSize="@dimen/app_text_word13"
        android:textColor="@color/white"
        android:paddingTop="@dimen/item_pspace8"
        android:paddingBottom="@dimen/item_pspace8"
        android:paddingStart="@dimen/item_pspace20"
        android:paddingEnd="@dimen/item_pspace20"
        app:qmui_radius="@dimen/item_pspace5"
        app:qmui_backgroundColor="@color/allwees_theme_color"
        app:qmui_borderWidth="0dp"
        android:layout_centerInParent="true"
        >
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton>



</RelativeLayout>

