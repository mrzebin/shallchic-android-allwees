<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rl_noCart"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/item_pspace20"
    android:paddingBottom="@dimen/item_pspace20"
    >
    <ImageView
        android:id="@+id/iv_scenery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_image_cartemty"
        >
    </ImageView>
    <TextView
        android:id="@+id/iv_senery_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cart_empty_hint"
        android:textSize="@dimen/app_text_word13"
        android:textColor="@color/color_999"
        android:gravity="center"
        android:layout_marginBottom="@dimen/item_pspace10">
    </TextView>
    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/qmui_emptyCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/continue_shopping"
        android:textSize="@dimen/app_text_word13"
        android:textColor="@color/white"
        android:paddingTop="@dimen/item_pspace8"
        android:paddingBottom="@dimen/item_pspace8"
        android:paddingStart="@dimen/item_pspace20"
        android:paddingEnd="@dimen/item_pspace20"
        app:qmui_radius="@dimen/item_pspace5"
        app:qmui_backgroundColor="@color/allwees_theme_color"
        app:qmui_borderWidth="0dp"
        >
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton>

</LinearLayout>

