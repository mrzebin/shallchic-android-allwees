<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/qriv_photoCover"
        android:layout_width="@dimen/item_pspace80"
        android:layout_height="@dimen/item_pspace80"
        android:minWidth="@dimen/item_pspace80"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:qmui_border_width="@dimen/item_pspace1"
        app:qmui_border_color="@color/color_eee"
        app:qmui_corner_radius="@dimen/item_pspace8"
        >
    </com.qmuiteam.qmui.widget.QMUIRadiusImageView>

    <ImageView
        android:id="@+id/iv_refundDelete"
        android:layout_width="@dimen/item_pspace15"
        android:layout_height="@dimen/item_pspace15"
        android:src="@mipmap/ic_refund_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>