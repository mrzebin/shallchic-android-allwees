<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/item_pspace15"
        >
        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/iv_carGoods"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:qmui_corner_radius="0dp"
            app:qmui_border_width="@dimen/item_pspace0.5"
            app:qmui_border_color="@color/color_f3f3"
            android:layout_width="@dimen/item_pspace85"
            android:layout_height="@dimen/item_pspace85"
            android:src="@mipmap/allwees_ic_default_goods"
            >
        </com.qmuiteam.qmui.widget.QMUIRadiusImageView>

        <LinearLayout
            android:id="@+id/ll_g_titleDes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/item_pspace10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_carGoods"
            app:layout_constraintEnd_toStartOf="@id/tv_cartBuyP"
            >
            <TextView
                android:id="@+id/tv_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_free"
                android:gravity="center"
                android:textSize="@dimen/app_text_word11"
                android:textColor="@color/color_f3636"
                android:visibility="gone"
                android:background="@drawable/shape_origin_frame"
                >
            </TextView>
            <TextView
                android:id="@+id/tv_cartGoodsDes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/app_text_12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="1"
                >
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cartBuyP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/app_text_word12"
            android:textColor="@color/color_999"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/ll_g_titleDes"
            app:layout_constraintEnd_toEndOf="parent"
            >
        </TextView>

        <LinearLayout
            android:id="@+id/ll_goodsItemDes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/item_pspace2"
            android:layout_marginStart="@dimen/item_pspace10"
            app:layout_constraintTop_toBottomOf="@id/ll_g_titleDes"
            app:layout_constraintStart_toEndOf ="@id/iv_carGoods"
            app:layout_constraintEnd_toStartOf ="@id/tv_cartOriginP"
            app:layout_constraintHorizontal_weight="1"
            >
            <TextView
                android:id="@+id/tv_cdItemFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_free"
                android:textSize="@dimen/app_text_word12"
                android:textColor="@color/color_f3636"
                android:background="@drawable/shape_origin_frame"
                android:visibility="gone"
                >
            </TextView>
            <TextView
                android:id="@+id/tv_cartGoodsRult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_999"
                android:textSize="@dimen/app_text_12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="1"
                >
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cartOriginP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/app_text_12sp"
            android:textColor="@color/color_999"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tv_cartBuyP"
            app:layout_constraintEnd_toEndOf="parent"
            >
        </TextView>

        <TextView
            android:id="@+id/tv_cShipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cart_item_shipping"
            android:textSize="@dimen/app_text_12sp"
            android:textColor="@color/color_999"
            app:layout_constraintTop_toBottomOf="@id/ll_goodsItemDes"
            app:layout_constraintStart_toStartOf="@id/ll_goodsItemDes"
            >
        </TextView>
        <TextView
            android:id="@+id/tv_cartShippingP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/app_text_12sp"
            android:textColor="@color/color_999"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_cShipping"
            app:layout_constraintStart_toEndOf="@id/tv_cShipping"
            app:layout_constraintTop_toBottomOf="@id/ll_goodsItemDes"
            >
        </TextView>

        <LinearLayout
            android:id="@+id/ll_cModifyCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/item_pspace5"
            android:paddingBottom="@dimen/item_pspace5"
            android:paddingStart="@dimen/item_pspace15"
            android:paddingEnd="@dimen/item_pspace15"
            android:gravity="center"
            android:background="@color/color_f0f0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_carGoods"
            >

            <TextView
                android:id="@+id/tv_carBuyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/app_text_word12"
                android:drawablePadding="@dimen/item_pspace5"
                app:drawableEndCompat="@mipmap/ic_common_down_arrow" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_pspace0.5"
        android:background="@color/color_f3f3"
        android:layout_marginStart="@dimen/item_pspace15"
        android:layout_marginEnd="@dimen/item_pspace15"
        >
    </View>
</LinearLayout>

