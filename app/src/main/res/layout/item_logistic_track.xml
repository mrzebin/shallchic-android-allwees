<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/item_pspace10"
    android:paddingStart="@dimen/item_pspace10"
    android:paddingEnd="@dimen/item_pspace10"
    >
    <TextView
        android:id="@+id/tv_logisticM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/app_text_word13"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>

    <TextView
        android:id="@+id/tv_logisticHS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/app_text_word13"
        android:textColor="@color/color_999"
        app:layout_constraintTop_toBottomOf="@id/tv_logisticM"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>
    <ImageView
        android:id="@+id/iv_logTarget"
        android:layout_width="@dimen/item_pspace20"
        android:layout_height="@dimen/item_pspace20"
        android:src="@drawable/selector_logistic_bg"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/item_pspace10"
        app:layout_constraintStart_toEndOf="@id/tv_logisticHS"
        app:layout_constraintTop_toTopOf="@id/tv_logisticM"
        >
    </ImageView>
    <View
        android:layout_width="@dimen/item_pspace1"
        android:layout_height="@dimen/item_pspace20"
        android:background="@color/color_999"
        android:layout_marginTop="@dimen/item_pspace3"
        app:layout_constraintTop_toBottomOf="@id/iv_logTarget"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_logTarget"
        app:layout_constraintEnd_toEndOf="@id/iv_logTarget"
        >
    </View>
    <TextView
        android:id="@+id/tv_logTargetA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/app_text_word13"
        android:textColor="@color/color_999"
        android:lines="2"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/item_pspace5"
        android:textIsSelectable="true"
        app:layout_constraintStart_toEndOf="@id/iv_logTarget"
        app:layout_constraintTop_toTopOf="@id/iv_logTarget"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>