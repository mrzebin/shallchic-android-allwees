<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background_default"
    >
    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/qmui_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_topbar"
        android:background="@color/app_background_default"
        >
    </com.qmuiteam.qmui.widget.QMUITopBarLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_pspace0.5"
        android:background="@color/color_f3f3">
    </View>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srf_earn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.hb.basemodel.utils.RecycerLoadMoreScrollView
            android:id="@+id/rlv_earn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:nestedScrollingEnabled="false"
            android:scrollbars="none"
            >
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/item_pspace10"
                app:qmui_radius="@dimen/item_pspace10"
                app:qmui_borderWidth="0dp"
                app:qmui_backgroundColor="@color/white"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/app_background_default"
                    android:descendantFocusability="blocksDescendants"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_earn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
        </com.hb.basemodel.utils.RecycerLoadMoreScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>