<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_endNoData"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_pspace20"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="gone"
    android:background="@color/app_background_default"
    >
    <View
        android:layout_width="@dimen/item_pspace30"
        android:layout_height="1dp"
        android:background="@color/color_999"
        android:layout_gravity="center_vertical"
        >
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_nomore"
        android:textSize="@dimen/app_text_word12"
        android:textColor="@color/color_999"
        android:paddingStart="@dimen/item_pspace20"
        android:paddingEnd="@dimen/item_pspace20"
        >
    </TextView>

    <View
        android:layout_width="@dimen/item_pspace30"
        android:layout_height="1dp"
        android:background="@color/color_999"
        android:layout_gravity="center_vertical"
        >
    </View>

</LinearLayout>