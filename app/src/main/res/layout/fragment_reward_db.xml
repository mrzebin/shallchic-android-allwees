<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background_default"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/item_pspace30"
        android:padding="@dimen/item_pspace30"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <ImageView
                android:layout_width="@dimen/item_pspace85"
                android:layout_height="@dimen/item_pspace85"
                android:src="@mipmap/allwees_ic_integral"
                android:scaleType="fitXY"
                >
            </ImageView>
            <TextView
                android:id="@+id/tv_db_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >
            </TextView>
            <TextView
                android:id="@+id/tv_updateEarnT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/earned_s"
                android:textSize="@dimen/app_text_word12"
                android:textColor="@color/color_999"
                android:gravity="center_horizontal"
                >
            </TextView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.qmuiteam.qmui.widget.tab.QMUITabSegment
        android:id="@+id/tb_rewardFun"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        >
    </com.qmuiteam.qmui.widget.tab.QMUITabSegment>

    <com.project.app.ui.CustomViewPager
        android:id="@+id/vp_rewardFun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_pspace10"
        >
    </com.project.app.ui.CustomViewPager>

</LinearLayout>