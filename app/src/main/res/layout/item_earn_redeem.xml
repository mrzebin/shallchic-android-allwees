<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/item_pspace15"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_rateCoupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text=""
        android:textSize="@dimen/app_text_word16"
        android:gravity="center"
        >
    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/item_pspace20"
        >
        <LinearLayout
            android:id="@+id/ll_right_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/item_pspace3"
            android:paddingBottom="@dimen/item_pspace3"
            android:paddingStart="@dimen/item_pspace5"
            android:paddingEnd="@dimen/item_pspace5"
            android:background="@color/allwees_theme_color"
            android:layout_alignParentEnd="true"
            >
            <TextView
                android:id="@+id/tv_entireCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200pts"
                android:textSize="@dimen/app_text_word13"
                android:textColor="@color/white"
                >
            </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_p_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upper_off"
            android:textSize="@dimen/app_text_word16"
            android:layout_below="@id/ll_right_p"
            >
        </TextView>
        <TextView
            android:id="@+id/tv_p_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/entire_p"
            android:textSize="@dimen/app_text_word13"
            android:layout_below="@id/tv_p_s"
            >
        </TextView>

    </RelativeLayout>


</LinearLayout>