<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_refreshEmpty"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/item_pspace30"
    >
    <ImageView
        android:id="@+id/iv_reLogistic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_placeholder_order"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/item_pspace30"
        android:layout_marginBottom="@dimen/item_pspace20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_emptyOrderHint"
        >
    </ImageView>

    <TextView
        android:id="@+id/tv_emptyOrderHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_dont_coupon"
        android:textSize="@dimen/app_text_word13"
        android:textColor="@color/color_999"
        android:layout_marginBottom="@dimen/item_pspace20"
        app:layout_constraintBottom_toTopOf="@id/qrb_refreshOrder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </TextView>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/qrb_refreshOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refresh"
        android:textSize="@dimen/app_text_word13"
        android:textColor="@color/white"
        android:paddingTop="@dimen/item_pspace8"
        android:paddingBottom="@dimen/item_pspace8"
        android:paddingStart="@dimen/item_pspace40"
        android:paddingEnd="@dimen/item_pspace40"
        app:qmui_borderWidth="0dp"
        app:qmui_radius="@dimen/item_pspace5"
        app:qmui_backgroundColor="@color/allwees_theme_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton>



</LinearLayout>