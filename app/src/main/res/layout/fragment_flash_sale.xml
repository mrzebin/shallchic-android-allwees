<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background_default"
    android:clipChildren="false"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ll_inflateTp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_pspace40"
            android:paddingStart="@dimen/item_pspace10"
            android:paddingEnd="@dimen/item_pspace10"
            >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_black_back"
                >
            </ImageView>
            <TextView
                android:id="@+id/tv_topTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/app_text_16sp"
                android:layout_centerInParent="true"
                android:text="@string/flash_sale_title"
                >
            </TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_comeMyCart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                >
                <ImageView
                    android:id="@+id/iv_shipCart_fs"
                    android:layout_width="@dimen/item_pspace20"
                    android:layout_height="@dimen/item_pspace20"
                    android:src="@mipmap/ic_shopping_cart_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                </ImageView>
                <TextView
                    android:id="@+id/tv_buyNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/app_text_word11"
                    android:textColor="@color/color_333"
                    app:layout_constraintStart_toStartOf="@id/iv_shipCart_fs"
                    app:layout_constraintEnd_toEndOf="@id/iv_shipCart_fs"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/v_hasCart"
                android:layout_width="@dimen/item_pspace5"
                android:layout_height="@dimen/item_pspace5"
                android:background="@drawable/shape_red_5_indicate"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_toStartOf="@id/cl_comeMyCart"
                android:layout_marginTop="@dimen/item_pspace10"
                >
            </View>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/color_333"
            >
            <LinearLayout
                android:id="@+id/ll_flashtoday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/item_pspace10"
                android:paddingBottom="@dimen/item_pspace10"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_fsToday_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00-23:59"
                    android:textSize="@dimen/app_text_word12"
                    android:textColor="@color/color_999"
                    >
                </TextView>
                <TextView
                    android:id="@+id/tv_fsToday_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flash_sale_state"
                    android:textSize="@dimen/app_text_word12"
                    android:textColor="@color/color_999"
                    >
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_flashTomorrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/item_pspace10"
                android:paddingBottom="@dimen/item_pspace10"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_fsTomorrowTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00-23:59"
                    android:textSize="@dimen/app_text_word12"
                    android:textColor="@color/color_999"
                    >
                </TextView>
                <TextView
                    android:id="@+id/tv_fsTomorrowStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flash_sale_state"
                    android:textSize="@dimen/app_text_word12"
                    android:textColor="@color/color_999"
                    >
                </TextView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_fsComming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flash_sale_comming"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/app_text_word12"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/item_pspace10"
                    ></TextView>

                <ImageView
                    android:id="@+id/iv_fsQuestMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_about"
                    android:layout_margin="@dimen/item_pspace5"
                    android:layout_alignParentEnd="true"
                    >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flash_sale_soon"
                    android:textSize="@dimen/app_text_word12"
                    android:textColor="@color/color_999"
                    android:layout_below="@id/tv_fsComming"
                    android:layout_centerHorizontal="true"
                    >
                </TextView>
            </RelativeLayout>
        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_fsContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            android:fadeScrollbars="true"
            >
        </androidx.viewpager2.widget.ViewPager2>
    </LinearLayout>

</LinearLayout>