<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/app_background_default"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_pspace10"
        android:layout_marginBottom="@dimen/item_pspace20"
        android:layout_marginStart="@dimen/item_pspace20"
        >
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_close"
            android:paddingTop="@dimen/item_pspace10"
            android:paddingBottom="@dimen/item_pspace10"
            android:paddingStart="@dimen/item_pspace10"
            android:paddingEnd="@dimen/item_pspace20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        </ImageView>

        <ImageView
            android:id="@+id/iv_goodThumb"
            android:layout_width="@dimen/item_pspace85"
            android:layout_height="@dimen/item_pspace85"
            android:scaleType="fitXY"
            android:src="@mipmap/allwees_ic_default_goods"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        </ImageView>

        <TextView
            android:id="@+id/tv_gdRetailprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/item_pspace20"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/item_pspace23"
            app:layout_constraintTop_toTopOf="@id/iv_goodThumb"
            app:layout_constraintStart_toEndOf="@id/iv_goodThumb"
            >
        </TextView>

        <TextView
            android:id="@+id/tv_gdOrignPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_999"
            android:layout_marginStart="@dimen/item_pspace10"
            app:layout_constraintStart_toEndOf = "@id/tv_gdRetailprice"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_gdRetailprice"
            >
        </TextView>

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goods_detail_selected"
            android:textColor="@color/color_999"
            android:layout_marginTop="@dimen/item_pspace5"
            app:layout_constraintStart_toStartOf="@id/tv_gdRetailprice"
            app:layout_constraintTop_toBottomOf="@id/tv_gdRetailprice"
            >
        </TextView>

        <TextView
            android:id="@+id/tv_cGdColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_999"
            android:layout_marginTop="@dimen/item_pspace5"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_tag"
            app:layout_constraintStart_toEndOf="@id/tv_tag"
            >
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goods_detail_size"
        android:layout_marginStart="@dimen/item_pspace20"
        >
    </TextView>

    <com.project.app.ui.widget.GoodsViewGroup
        android:id="@+id/gv_sizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_pspace20"
        android:layout_marginEnd="@dimen/item_pspace20"
        >
    </com.project.app.ui.widget.GoodsViewGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goods_detail_color"
        android:layout_marginTop="@dimen/item_pspace10"
        android:layout_marginStart="@dimen/item_pspace20"
        android:layout_marginEnd="@dimen/item_pspace20"
        >
    </TextView>

    <com.project.app.ui.widget.GoodsViewGroup
        android:id="@+id/gv_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_pspace20"
        android:layout_marginEnd="@dimen/item_pspace20"
        >
    </com.project.app.ui.widget.GoodsViewGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/item_pspace30"
        android:layout_marginStart="@dimen/item_pspace20"
        android:layout_marginEnd="@dimen/item_pspace20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goods_detail_qty"
            >
        </TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            >
            <TextView
                android:id="@+id/tv_inDes"
                android:layout_width="@dimen/item_pspace25"
                android:layout_height="@dimen/item_pspace25"
                android:text="-"
                android:textSize="@dimen/app_text_word13"
                android:gravity="center"
                android:background="@color/color_f3f3"
                >
            </TextView>
            <TextView
                android:id="@+id/tv_buyCount"
                android:layout_width="@dimen/item_pspace20"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                android:textSize="@dimen/app_text_word13"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/item_pspace20"
                android:layout_marginEnd="@dimen/item_pspace20"
                >
            </TextView>
            <TextView
                android:id="@+id/tv_inAdd"
                android:layout_width="@dimen/item_pspace25"
                android:layout_height="@dimen/item_pspace25"
                android:text="+"
                android:textSize="@dimen/app_text_word13"
                android:gravity="center"
                android:background="@color/color_f3f3"
                >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/item_pspace80"
        android:paddingBottom="@dimen/item_pspace10"
        android:paddingStart="@dimen/item_pspace20"
        android:paddingEnd="@dimen/item_pspace20"
        app:layout_constraintStart_toStartOf="parent"
        >
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/qmui_addToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/goods_atc"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/item_pspace10"
            android:paddingTop="@dimen/item_pspace10"
            app:qmui_radius="@dimen/item_pspace8"
            app:qmui_borderWidth="0dp"
            app:qmui_backgroundColor="@color/color_f3636"
            app:qmui_skin_background="?attr/app_skin_btn_test_bg"
            app:qmui_skin_text_color="?attr/app_skin_btn_test_border"
            >
        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton>
    </LinearLayout>

</LinearLayout>